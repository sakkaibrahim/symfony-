
{% extends 'base.html.twig' %}

{% block title %}Hello AuthorController!{% endblock %}

{% block body %}
  <style>
    .example-wrapper {
      margin: 1em auto;
      max-width: 800px;
      width: 95%;
      font: 18px/1.5 sans-serif;
    }
    .example-wrapper code {
      background: #F5F5F5;
      padding: 2px 6px;
    }
  </style>

  <div class="example-wrapper">
<h1>Add Author</h1>
{# {{form(f)}} #}
  <div class="example-wrapper">
{#{{form(f)}}#}

{{form_start(f)}}
{{form_label(f.username,"Author's username :")}}
{{form_widget(f.username,{'attr':{'class':'form-control'}})}}
{{form_label(f.email,"Author's Email :")}}
{{form_widget(f.email,{'attr':{'class':'form-control'}})}}
{{form_widget(f.submit,{'attr':{'class':'btn btn-primary'}})}}
{{form_end(f)}}
  </div>
  {% endblock %}
